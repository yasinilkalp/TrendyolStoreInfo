<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<PackageId>Ledbim.TrendyolStoreInfo</PackageId>
		<Version>1.0.3</Version>
		<Authors>Yasin ilkalp Arabacı</Authors>
		<Company>Ledbim</Company>
		<Description>Trendyol Mağaza bilgilerini Web Scraping ile okuyup modellediğimiz bir kütüphanedir.</Description>
		<PackageTags>Trendyol,Scraping</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<RepositoryUrl>https://github.com/yasinilkalp/TrendyolStoreInfo</RepositoryUrl>
		<PackageIcon>icon.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Playwright" Version="1.28.0" />
	</ItemGroup>

</Project>
